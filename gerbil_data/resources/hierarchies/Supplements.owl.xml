    <!ENTITY owl 'http://www.w3.org/2002/07/owl#'>
    <!ENTITY owl2xml 'http://www.w3.org/2006/12/owl2-xml#'>
    <!ENTITY rdf 'http://www.w3.org/1999/02/22-rdf-syntax-ns#'>
    <!ENTITY rdfs 'http://www.w3.org/2000/01/rdf-schema#'>
    <!ENTITY xsd 'http://www.w3.org/2001/XMLSchema#'>
]>

<rdf:RDF
    xml:base="http://www.ontologydesignpatterns.org/ont/dul/Supplements.owl"
    xmlns="http://www.ontologydesignpatterns.org/ont/dul/Supplements.owl#"
    xmlns:Supplements="http://www.ontologydesignpatterns.org/ont/dul/Supplements.owl#"
    xmlns:daml="http://www.daml.org/2001/03/daml+oil#"
    xmlns:dul="http://www.ontologydesignpatterns.org/ont/dul/DUL.owl#"
    xmlns:owl="http://www.w3.org/2002/07/owl#"
    xmlns:owl2xml="http://www.w3.org/2006/12/owl2-xml#"
    xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
    xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema#">

<owl:Ontology rdf:about="">
    <owl:imports rdf:resource="http://www.ontologydesignpatterns.org/ont/dul/DUL.owl"/>
    <rdfs:comment rdf:datatype="&xsd;string">An ontology containing supplemental classes or patterns for DOLCE top-level. For example, the notion of Aggregate as distinct from Collection and Set, the notion of DependentPart, etc.</rdfs:comment>
    <owl:versionInfo rdf:datatype="&xsd;string"><![CDATA[0.1
As of version 0.1, only 4 kinds of supplements to DOLCE top level, for use in OntoWordNet alignment.
Author: Aldo Gangemi]]></owl:versionInfo>
</owl:Ontology>

<owl:Class rdf:about="#PoliticalGeographicObject">
    <rdfs:subClassOf rdf:resource="&dul;Place"/>
</owl:Class>

<owl:Class rdf:about="#DependentPlace">
    <rdfs:subClassOf>
        <owl:Restriction>
            <owl:onProperty rdf:resource="&dul;isPartOf"/>
            <owl:someValuesFrom>
                <owl:Restriction>
                    <owl:onProperty rdf:resource="&dul;isLocationOf"/>
                    <owl:someValuesFrom rdf:resource="&dul;PhysicalObject"/>
                </owl:Restriction>
            </owl:someValuesFrom>
        </owl:Restriction>
    </rdfs:subClassOf>
    <rdfs:subClassOf rdf:resource="&dul;PhysicalPlace"/>
</owl:Class>

<owl:Class rdf:about="#SpatialFeature">
    <rdfs:subClassOf rdf:resource="#DependentPart"/>
</owl:Class>

<owl:Class rdf:about="#GeographicalFeature">
    <rdfs:subClassOf rdf:resource="#SpatialFeature"/>
</owl:Class>

<owl:Class rdf:about="#GeographicalObject">
    <rdfs:subClassOf rdf:resource="&dul;PhysicalPlace"/>
</owl:Class>

<owl:ObjectProperty rdf:about="#groundedInAggregate">
    <rdfs:domain>
        <owl:Class>
            <owl:unionOf rdf:parseType="Collection">
                <owl:Class rdf:about="&dul;Collection"/>
                <owl:Class rdf:about="&dul;Situation"/>
            </owl:unionOf>
        </owl:Class>
    </rdfs:domain>
    <rdfs:range rdf:resource="#Aggregate"/>
</owl:ObjectProperty>

<owl:ObjectProperty rdf:about="#aggregatesFrom">
    <owl:inverseOf rdf:resource="#groundedInAggregate"/>
    <rdfs:domain rdf:resource="#Aggregate"/>
    <rdfs:range>
        <owl:Class>
            <owl:unionOf rdf:parseType="Collection">
                <owl:Class rdf:about="&dul;Collection"/>
                <owl:Class rdf:about="&dul;Situation"/>
            </owl:unionOf>
        </owl:Class>
    </rdfs:range>
</owl:ObjectProperty>

<owl:Class rdf:about="#TopologicalWhole">
    <rdfs:subClassOf rdf:resource="&dul;Entity"/>
</owl:Class>

<owl:Class rdf:about="#Aggregate">
    <rdfs:subClassOf>
        <owl:Restriction>
            <owl:onProperty rdf:resource="&dul;hasPart"/>
            <owl:someValuesFrom rdf:resource="&dul;Entity"/>
        </owl:Restriction>
    </rdfs:subClassOf>
    <rdfs:subClassOf>
        <owl:Restriction>
            <owl:onProperty rdf:resource="#aggregatesFrom"/>
            <owl:someValuesFrom rdf:resource="&dul;Collection"/>
        </owl:Restriction>
    </rdfs:subClassOf>
    <rdfs:subClassOf rdf:resource="&dul;Entity"/>
</owl:Class>

<owl:Class rdf:about="#DependentPart">
    <rdfs:subClassOf>
        <owl:Restriction>
            <owl:onProperty rdf:resource="&dul;isDescribedBy"/>
            <owl:someValuesFrom rdf:resource="&dul;Design"/>
        </owl:Restriction>
    </rdfs:subClassOf>
    <rdfs:subClassOf>
        <owl:Restriction>
            <owl:onProperty rdf:resource="&dul;isPartOf"/>
            <owl:someValuesFrom rdf:resource="&dul;Entity"/>
        </owl:Restriction>
    </rdfs:subClassOf>
    <rdfs:subClassOf rdf:resource="&dul;Entity"/>
</owl:Class>

<owl:Class rdf:about="#Aggregate">
    <rdfs:comment rdf:datatype="&xsd;string"><![CDATA[An aggregate is the mereological sum (the simple sum of parts) of whatever entities are considered together for a new entity to emerge. We assume that there is a Collection, which the parts of an Aggregate are member of.
For example, a dog, its howling, the full moon, and the feeling of grass under my back can be considered just as a list of entities, as the members of a Collection associated in my cognitive memory (therefore there is a relation unifying the Collection), as well as the entities that are in the setting of a Situation that I have conceived for some reason.
A list of entities that do not serve any functional role is not considered here as a special type of entity. The (mereological sum of the) members of a Collection is what we call here an Aggregate. The (mereological sum of the) entities from the setting of a Situation can also be considered an Aggregate, because situations must satisfy a Description, which can unify a Collection, which those entities are member of.]]></rdfs:comment>
    <rdfs:label xml:lang="en">Aggregate</rdfs:label>
</owl:Class>

<owl:Class rdf:about="#DependentPart">
    <rdfs:comment rdf:datatype="&xsd;string"><![CDATA[Relevant parts of entities, e.g. of a dul:PhysicalObject, like a bump or an edge. They loose that identity if not considered as parts of those objects (but their identity is not destroyed when detached, if it is recognizable).
This conception implies that in order to be a dependent part, a recognition of the dul:Description (e.g. its dul:Design) of an object must be assumed.]]></rdfs:comment>
    <rdfs:label xml:lang="en">Dependent part</rdfs:label>
</owl:Class>

<owl:Class rdf:about="#DependentPlace">
    <rdfs:comment rdf:datatype="&xsd;string">A dul:PhysicalPlace whose identity depends on a specific dul:PhysicalObject, like a hole in a piece of cheese, the underneath of a table, the front of a house, or the shadow of a tree.</rdfs:comment>
    <rdfs:label xml:lang="en">Dependent place</rdfs:label>
</owl:Class>

<owl:Class rdf:about="#SpatialFeature">
    <rdfs:comment rdf:datatype="&xsd;string">A geologically relevant dependent part, e.g. a mountain, peninsula, island, etc.</rdfs:comment>
    <rdfs:label xml:lang="en">Spatial feature</rdfs:label>
</owl:Class>

<owl:Class rdf:about="#TopologicalWhole">
    <rdfs:comment rdf:datatype="&xsd;string">An Entity whose unity criterion is constructed by assuming a topological boundary and self-connectedness.</rdfs:comment>
    <rdfs:label xml:lang="en">Topological whole</rdfs:label>
</owl:Class>

<owl:ObjectProperty rdf:about="#aggregatesFrom">
    <rdfs:label xml:lang="en">aggregates from</rdfs:label>
</owl:ObjectProperty>

<owl:ObjectProperty rdf:about="#groundedInAggregate">
    <rdfs:label xml:lang="en">grounded in aggregate</rdfs:label>
</owl:ObjectProperty>



<owl:Class rdf:about="&dul;Collection"/>

